<Window x:Class="TextEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEdit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="187*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBox Name="textArea" HorizontalAlignment="Center" Margin="0,62,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="476" Height="293" FontSize="20"/>
        <Button Click ="SaveAndQuit" Content="Сохранить и выйти" HorizontalAlignment="Left" Margin="141,0,0,0" VerticalAlignment="Center" Height="30" Width="146" Grid.Row="1" FontSize="15"/>
        <Button Content="Начать работу" Click="Start" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="30" FontSize="15" Width="113"/>

    </Grid>
</Window>
